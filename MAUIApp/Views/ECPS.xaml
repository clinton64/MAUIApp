<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIApp.Views.ECPS"
             Title="Rajuk FRCM">
    <FlexLayout Direction="Column">
        <Label 
            Text="Rajdhani Unnayan Kartipakkha (RAJUK) FRCM"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="24"
            FontAttributes="Bold"
            Margin="0,20,0,0"
            />

        <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center" FlexLayout.Grow="1">
            <VerticalStackLayout Spacing="5">
                <Button
                    x:Name="LogInBtn"
                    Text="Log In"
                    WidthRequest="250"
                    Clicked="LogInBtnClicked"
                    HorizontalOptions="Center"
                    />
                <Button
                    x:Name="RegisterBtn"
                    Text="Register"
                    WidthRequest="250"
                    Clicked="RegisterBtnClicked"
                    HorizontalOptions="Center"
                    />
            </VerticalStackLayout>
        </FlexLayout>
    </FlexLayout>
</ContentPage>
